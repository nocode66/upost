<h1>Please submit your data</h1>
<p></p>
<%= bootstrap_form_for(@person) do |f| %>
  <%= f.text_field :first_name, label: "First Name" %>
  <%= f.text_field :last_name, label: "Last Name" %>
  <%= f.email_field :email, label: "Email" %>
  <%= f.email_field :email_confirmation, label: "Confirmation Email" %>
  <%= f.collection_select( :country_id, Country.all, :id, :name, prompt: 'Please select a country', class: 'form-control') %>
  
  <div class="form-group">
    <label class="control-label" for="person_city_id">City</label>
    <select class="form-control" id="person_city_id" name="person[city_id]"></select>
  </div>
  <%= f.submit "Submit", name: "preview" %>
<% end %>



